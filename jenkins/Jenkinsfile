pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url:'https://github.com/Safi-Ahmed-Shariff/AutoML-DevOps.git', branch: 'main'
            }
        }
    }
        stage ('Build Docker Image') {
            steps {
                script {
                    docker.build('model-trainer', 'docker/')
                }
            }
        }
        stage ('Run Model Trainer') {
            steps {
                    sh 'docker run model-trainer'
            }
        }

    }
